<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_image"
            android:layout_marginLeft="8dp"
            android:text="PRO USER"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_type"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/user_image"
            android:layout_toEndOf="@+id/user_image"
            android:text="SOME DATE"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/date"
            android:layout_alignStart="@+id/date"
            android:text="Description"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

    <ImageView
        android:id="@+id/report_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/date"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/imageButton"
        android:src="@drawable/broken_ring" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/report_image"
            android:layout_marginEnd="33dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_up"
            android:id="@+id/imageButton"
            android:onClick="upArrow"
            />

    <TextView
        android:id="@+id/reputation"
        android:layout_width="24dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/nameUser"
        android:layout_alignBottom="@+id/nameUser"
        android:layout_alignStart="@+id/imageButton"
        android:text="+12"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/reputation"
        android:layout_below="@+id/date"
        android:background="@android:color/transparent"
        android:onClick="downArrow"
        android:src="@drawable/arrow_down" />

</RelativeLayout>
