<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="eu.croussel.sportyfield.AddReport">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/field_location"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white"
            android:text="Add a report"
            android:textSize="16sp"
            android:textStyle="normal"
            android:gravity="left|center"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="42dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_circle_white_24dp"
            android:tint="@color/colorPrimary"
            android:onClick="imageSearch"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add information:"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descr"
        android:textSize="17dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="ADD REPORT"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/white"
        android:layout_gravity="right"
        android:id="@+id/buttonToAdd"
        android:onClick="repAdd"
    />

</LinearLayout>
